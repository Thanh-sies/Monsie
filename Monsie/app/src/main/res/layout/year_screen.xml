<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigatebuttons"
        android:layout_weight="0.28">

        <Button
            android:id="@+id/dayview"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/day"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/monthview"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/month"
            android:layout_marginLeft="145dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/yearview"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/year"
            android:layout_marginLeft="245dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:paddingTop="35dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/yearlyPage"
        android:textStyle="normal"
        android:gravity="center"
        android:typeface="sans"
        android:textColor="#395075"
        android:id="@+id/yearlyReport" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/summary_button"
        android:text="@string/summary"
        android:textSize="25sp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/happy2"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
       />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        />


</RelativeLayout>